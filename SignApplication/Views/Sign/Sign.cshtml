@{
    ViewBag.Title = "Sign";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div class="container" ng-controller="SignController">
    <h3>Здравствуйте, Вам необходимо подписать данный документ. Проставьте все необходимые поля и нажмите на кнопку создать подпись.</h3>
    <div class="row" style="text-align: center;">
        <pagination total-items="totalPages" items-per-page="1" ng-model="currentPage" max-size="maxSize" 
                    class="pagination-sm" boundary-links="true" rotate="false" ng-change="pageChanged()"
                    previous-text="Предыдущая страница" next-text="Следующая страница" first-text="Первая" last-text="Последняя">
        </pagination>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{document.Name}}</h3>
                </div>
                <div class="panel-body">
                    <div class="page">
                        <img id="droppable" class="page-content" src="{{document.DocFilePath}}"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
